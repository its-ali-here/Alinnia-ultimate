{
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true
    }
  },
  // This tells VS Code and other tools to only apply these Deno settings
  // to your Supabase functions directory.
  "include": ["supabase/functions/"], 
  "exclude": []
}